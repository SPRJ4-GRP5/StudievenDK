    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CaseId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">
            <button label="back to own cases" class="btns">Tilbage til Egne sager</button>
