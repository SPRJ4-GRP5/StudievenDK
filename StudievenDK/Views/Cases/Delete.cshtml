@model StudievenDK.Models.Case

@{
    ViewData["Title"] = "Delete";
}
    <link href="~/css/CaseLayout.css" rel="stylesheet" />
    <h1>@Html.DisplayFor(model => model.Subject)</h1>

<h3>Er du sikker på at du vil slette denne sag?</h3>
<div>
    <dl class="row">
        <dd class="col-sm-10">
            <img src="@("~/Image/"+Model.PictureName)" asp-append-version="true" width="250px" height="250px" />
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.Deadline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deadline)
            <p class="aboutTxt" />
        </dd>
        
        <dt class="col-sm-10">
            Kategorier:
        </dt>
        <dd class="col-sm-10">
            Fag:
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseName)
        </dd>
        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CaseId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">
            <button label="back to own cases" class="CaseBtn">Tilbage til Egne sager</button>
        </a>
    </form>
</div>
