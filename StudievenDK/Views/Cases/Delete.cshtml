    ViewData["Title"] = "Delete";
}
    <link href="~/css/CaseLayout.css" rel="stylesheet" />
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Case</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserHelper)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserHelper.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserSeeker)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserSeeker.Email)
        </dd>
        <dt class = "col-sm-2">
